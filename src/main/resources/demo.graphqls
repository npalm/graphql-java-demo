schema {
    query: Query
}

type Query {
    persons: [Person!]
    person(name: String!): Person
    talks: [Talk!]
    talk(title: String!): Talk
}

type Mutation {
    addPerson(name: String!): Person
}

type Person {
    id: ID!,
    name: String!,
  blog: String,
  githubAccount: String,
    talks: [Talk!],
}

type Talk {
    id: ID!,
    title: String!,
  summary: String,
    speakers: [Person!],
}
